{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "tailwind": "tailwindcss -i ./src/css/style.css -o ./public/output.css --watch",
    "bsync": "browser-sync start --config bs-config.js",
    "dev": "concurrently \"npm run tailwind\" \"npm run bsync\""
  }
}
